{
  "name": "rsvp-widget",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:widget": "vite build --watch",
    "build": "next build && npm run build:widget",
    "build:widget": "vite build",
    "build:next": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "db:run": "node -r dotenv/config -e 'require(\"child_process\").execSync(`sqlcmd -S ${process.env.SQL_SERVER} -d ${process.env.SQL_DATABASE} -U ${process.env.SQL_USER} -P \"${process.env.SQL_PASSWORD}\" -i ${process.argv[1]}`, {stdio: \"inherit\"})'",
    "db:run:test": "node -r dotenv/config -e 'require(\"child_process\").execSync(`sqlcmd -S ${process.env.SQL_SERVER_TEST} -d ${process.env.SQL_DATABASE_TEST} -U ${process.env.SQL_USER_TEST} -P \"${process.env.SQL_PASSWORD_TEST}\" -i ${process.argv[1]}`, {stdio: \"inherit\"})'",
    "db:migration": "npm run db:run database/rsvp-email-campaigns-migration.sql",
    "db:migration:test": "npm run db:run:test database/rsvp-email-campaigns-migration.sql",
    "db:scheduler": "npm run db:run database/sp-schedule-rsvp-emails.sql",
    "db:scheduler:test": "npm run db:run:test database/sp-schedule-rsvp-emails.sql",
    "db:submit": "npm run db:run database/sp-submit-rsvp-with-audit.sql",
    "db:submit:test": "npm run db:run:test database/sp-submit-rsvp-with-audit.sql"
  },
  "dependencies": {
    "@auth/core": "^0.34.2",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/js-cookie": "^3.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.516.0",
    "next": "15.3.2",
    "next-auth": "^5.0.0-beta.28",
    "next-pwa": "^5.6.0",
    "openai": "^5.5.0",
    "pg": "^8.16.3",
    "pnpm": "^10.11.0",
    "pwa-asset-generator": "^8.0.5",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "react-icons": "^5.5.0",
    "react-swipeable": "^7.0.1",
    "tailwind-merge": "^3.3.0",
    "tsx": "^4.19.4",
    "vaul": "^1.1.2",
    "zod": "^3.25.32"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5",
    "vite": "^7.2.2",
    "vite-plugin-css-injected-by-js": "^3.5.2"
  }
}
